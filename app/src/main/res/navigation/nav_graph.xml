<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/storiesFragment">

    <fragment
        android:id="@+id/storiesFragment"
        android:name="com.sherry.nyttopstories.ui.stories.TopStoriesFragment"
        android:label="Top Stories"
        tools:layout="@layout/fragment_top_stories">

        <action
            android:id="@+id/action_storiesFragment_to_storyDetailsFragment"
            app:destination="@id/storyDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/storyDetailsFragment"
        android:name="com.sherry.nyttopstories.ui.stories.StoryDetailsFragment"
        android:label="Story Details"
        tools:layout="@layout/fragment_story_details" >

        <action
            android:id="@+id/action_storyDetailsFragment_to_seeMoreFragment"
            app:destination="@+id/seeMoreFragment"
            />

    </fragment>

    <fragment
        android:id="@+id/seeMoreFragment"
        android:name="com.sherry.nyttopstories.ui.stories.SeeMoreFragment"
        android:label="More Details"
        tools:layout="@layout/fragment_see_more"
        />

</navigation>